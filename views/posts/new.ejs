<h1>New Post!</h1>

<form action="/posts" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="post[title]" placeholder="Title">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" name="post[price]" placeholder="Price">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea name="post[description]"></textarea>
    </div>
    <div class="form-group">
        <label>Location</label>
        <input type="text" name="post[location]" placeholder="Location">
    </div>
    <input type="submit">
</form>